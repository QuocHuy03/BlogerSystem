    <script>
        // Gửi Data
        $("#UpdateUser").on("click", function () {
          sendAuthorizedRequest("/user/update", "POST", {
            type: "Update",
            email: $("#email").val(),
            username: $("#username").val(),
            banned: $("#banned").val(),
            role: $("#role").val(),
          })
            .done(function (res) {
              Swal.fire({
                icon: res.status ? "success" : "error",
                title: "Thông Báo",
                text: res.message,
              }).then(() => {
                if (res.status) {
                  
                } else {
                  console.log("lỗi cập nhật user lỗi");
                }
              });
            })
            .fail(function (xhr, status, error) {
              if (xhr.status === 422) {
                // Validation errors
                var errors = xhr.responseJSON.result;
                var errorString = "";
                for (var key in errors) {
                  if (Array.isArray(errors[key])) {
                    errorString += key + ": " + errors[key].join(", ") + "<br>";
                  } else {
                    errorString += key + ": " + errors[key].msg + "<br>";
                  }
                }
                $("#error-messages").html(
                  '<div class="alert alert-danger">' + errorString + "</div>"
                );
              } else {
                // Other errors
                console.error(error);
              }
            });
        });
      </script>

